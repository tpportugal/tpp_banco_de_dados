<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Repôr Banco de Dados</h3>
  </div>
  <div class="panel-body">
    <%= form_tag({controller: :dashboard, action: :reset }, method: :post, html: { class: 'form' }) do %>
      <%= check_box_tag(:clear_enqueued_jobs, 1, true) %>
      <%= label_tag(:clear_enqueued_jobs, 'Limpar tarefas agendadas (que não estejam a correr)') %>

      <%= check_box_tag(:destroy_feed_versions, 1, true) %>
      <%= label_tag(:destroy_feed_versions, 'Destruir Versões das Feeds (e os ficheiros GTFS anexados') %>

      <%= check_box_tag(:truncate_database, 1, true) %>
      <%= label_tag(:truncate_database, 'Truncar base de dados') %>

      <%= submit_tag('Repôr', class: 'btn btn-danger') %>
    <% end %>
  </div>
</div>
